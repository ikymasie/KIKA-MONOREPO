{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}