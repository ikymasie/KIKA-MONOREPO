{
    "hosting": {
        "site": "kika-bw",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "cleanUrls": true,
        "rewrites": [
            {
                "source": "**",
                "run": {
                    "serviceId": "kika-nextjs",
                    "region": "us-central1"
                }
            }
        ],
        "headers": [
            {
                "source": "/_next/static/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=86400"
                    }
                ]
            }
        ]
    }
}